<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.EmailVerifyFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/email"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify Your Email"
        android:textSize="34sp"
        android:gravity="center"
        android:layout_marginHorizontal="25dp"
        android:fontFamily="@font/crimson_pro"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="25dp"
        android:background="@color/forgotPasswordColor"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginHorizontal="25dp"
        android:fontFamily="@font/crimson_pro"
        android:text="Check your email to verify your account. Please look for a verification email from us, and click on the link provided to complete your registration. If you don't see the email, check your spam or junk folder."/>

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:fontFamily="@font/crimson_pro"
        app:cornerRadius="8dp"
        android:elevation="15dp"
        android:layout_marginHorizontal="25dp"
        android:textSize="18sp"
        app:backgroundTint="@color/buttonColor"
        android:text="Open email app"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="55dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/crimson_pro"
            android:text="Haven't received it yet? "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/buttonColor"
            android:fontFamily="@font/crimson_pro"
            android:text="Request a new link"/>

    </LinearLayout>

</LinearLayout>